// Aboutme
.Aboutme
	background url('/images/bg-Aboutme.jpg') no-repeat
	background-position 50% 0
	position relative
	color #fff
	&-bg
		background rgba(0,0,0,0.66)
		height 100%
		width 100%
	&-cont
		padding-top 2.5em
	&-name
		display block
		font-size 1.5em
		font-family fontTitle
	&-description
		display block
		font-size .8em
		font-family fontBody
	&-img
		background url('/images/avatar.jpg')
		background-size cover
		box-shadow inset 0 0 0 0 rgba(200,95,66,0.4),inset 0 0 0 16px rgba(255,255,255,0.6),0 1px 2px rgba(0,0,0,0.1)
		position relative
		margin 0 auto
		width 200px
		height 200px
		border-radius 50%




// Aside Header
.AsideTop
	background #051928
	color #fff
	padding .6em 0 .4em 0
	position relative

	span
		color ColorCoral
		font-size 1.2em
		font-weight bold
		padding 0 .5em

		&:before
			color #fff
			margin-right 5px


// Biography
.Biography
	position relative
	&-description
		padding-top 30px
	&-title
		color ColorCoral
		font-size 2.3em
		letter-spacing -1px
		text-transform uppercase
		padding-bottom .5em
	&-info
		text-align left
		font-style italic
		font-size 1.2em



// Fotter
.Fotter
	position relative


// Header
.Header
	background #fff
	left 0
	position relative
	right 0
	top 0
	z-index 100
	&-logo
		position relative
		padding-bottom .2em
	&-logoLink
		box-sizing border-box
		padding .7em 0 0 .5em
		width 200px
	&-iconMobile
		cursor pointer
		position absolute
		right .5em
		top .5em
		z-index 9999
		color #fff
		background ColorCoral
		width 50px
		height 50px
		border-radius 50%
		line-height 60px
		box-shadow  0px 1px 2px rgba(0, 0, 0, 0.2)
		border 1px solid #fff
		&:before
			font-size 1.6em
	.u-wrapper
		padding 0





// divider
.Divider
	position relative
	width 100%
	display block
	height 5px

	span
		background #333
		float left
		height 5px
		width 25%

	.red
		background ColorCoral
	.blue
		background ColorBlue
	.green
		background ColorGreen
	.yellow
		background #f2ee69


// Menu


.MainMenu
	backface-visibility hidden
	background #fff
	box-shadow  0px 1px 2px rgba(0,0,0,0.2)
	box-sizing border-box
	height 0
	overflow hidden
	position relative
	right 0
	transition height 0.5s ease-out 0s
	width 100%
	z-index 100
	border-top 1px solid #DBDBDB

	&-callback
		&:checked
			& ~ .MainMenu
				height 100px
	&-list
		overflow-x scroll
		padding-bottom 10px
		padding-top 10px
		white-space nowrap
		width 100%

	&-item
		color #696969
		display inline-block
		font-size 15px
		opacity .9
		padding 0 5px 0 5px
		position relative
		width 75px

	&-link
		box-sizing border-box
		color blue
		display block
		font-weight bold
		height 90px
		position relative

		span
			color #696969
			opacity .9
			position relative

		i
			color ColorCoral
			display block
			font-size 1.5em
			line-height 40px
			&:before
				font-size 1.6em

		.icon-home
			color #444
		.icon-user
			color ColorGreen
		.icon-services
			color ColorCoral
		.icon-proces
			color ColorOrange
		.icon-porfolio
			color ColorBlue
		.icon-blog
			color #945DA5
		.icon-message
			color #748089

.Landing
	background #e7e7e7 url('/images/bg-Body.jpg') repeat
	background-attachment fixed
	position relative
	z-index 99



