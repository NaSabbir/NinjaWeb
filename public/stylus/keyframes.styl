// Cursor Type
@keyframes  blink
    0%
        opacity 1
    50%
        opacity 0
    100%
        opacity 1
// Animation arrow
@keyframes bounce
    0%
    20%
    50%
    80%
    100%
        transform translateY(0)
    40%
        transform translateY(-30px)
    60%
        transform translateY(-15px)

// Animation Avatar buzz-out
@keyframes buzz-out
    10%
    30%
    50%
    70%
    90%
        transform translateX(3px) rotate(2deg)
    20%
    40%
    60%
    80%
    100%
        transform translateX(-3px) rotate(-2deg)
