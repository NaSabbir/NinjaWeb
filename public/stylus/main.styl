@import 'nib'
@import 'nib/vendor'
@import 'nib/gradients'

@import 'normalize.styl'

@import 'icon'
@import 'mixin'

fontTitle = 'Boogaloo', sans-serif
fontBody = 'Lato', sans-serif


*
    margin 0
    padding 0
    box-sizing border-box

a
    text-decoration none
    display block
    color ColorBlue

body
    color #424242
    font-family fontBody
    font-size 1em
    font-weight 300
    line-height 1.5
    text-align center
    text-rendering optimizeLegibility

figure
    margin 0
    padding 0

img
    max-width 100%
    width auto

p
    margin 0 0 10px

ul
    list-style-type none
    margin 0
    padding 0
div
    display block

textarea
input[type=text]
input[type=password]
input[type=search]
input[type=email]
input[type=url]
    background #eee url('/images/bg-Body.jpg')
    border 0
    border-radius 10px
    box-sizing border-box
    font-size 1.2em
    height 50px
    line-height 1.2
    padding 5px 15px 5px 35px
    width 100%
    margin-bottom 20px
    box-shadow inset 2px 2px 0 rgba(187,187,187,.7)

textarea
    height 100px
    padding-left 15px
    resize none

textarea
input[type=text]
input[type=password]
input[type=search]
input[type=email]
input[type=url]
    &:focus
        box-shadow 0px 0px 0px 2px ColorCoral
        outline none
        border transparent

input[type=reset]
input[type=submit]
button
.Btn
    background ColorCoral
    border 0
    border-radius 10px
    color #fff
    font-size 1.3em
    font-weight bold
    margin-bottom 20px
    outline none
    padding 8px 20px
    text-transform uppercase
    width 100%

    &:hover
        background #b03a3d



::selection
    background #fba919
    color #444
    text-shadow 1px 1px #fff

@import 'body'
@import '768'
@import '1024'
@import '1200'
@import 'keyframes'
